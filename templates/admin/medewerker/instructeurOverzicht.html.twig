{% extends 'base.html.twig' %}
{% block medewerkers %}

    <div class="display-3">Overzicht instructeurs</div>
    <a type="button" class="btn btn-success mt-3" href="{{ path('admin_registreren_Instructeur') }}">Instructeur
        toevoegen</a>

    <table class="table mt-5">
        <thead>
        <tr>
            <th scope="col">Voornaam</th>
            <th scope="col">Tussenvoegsel</th>
            <th scope="col">Achternaam</th>
            <th scope="col">E-mail</th>
            <th scope="col">Geslacht</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for instructeur in instructeurs %}
            <tr>
                <td>{{ instructeur.voornaam }}</td>
                <td>{{ instructeur.tussenvoegsel }}</td>
                <td>{{ instructeur.achternaam }}</td>
                <td>{{ instructeur.email }}</td>
                <td>{{ instructeur.geslacht }}</td>
                <td>
                    <a type="button" class="btn btn-outline-info" href="{{ path('admin_edit_user', {'id':instructeur.id}) }}">edit</a>
                </td>
                <td>
                    <form method="post" action="{{ path('admin_user_delete', {'id': instructeur.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ instructeur.id) }}">
                        <button type="submit" class="btn btn-outline-danger">Verwijderen</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}